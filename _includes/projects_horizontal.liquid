{% assign project = include.project %}

<div class="project-col">
  <div class="project-card h-100 hoverable">
    <div class="row no-gutters">
      {% if project.img %}
        <div class="col-md-6">
          {% if project.disabled %}
            {% include figure.liquid
              loading="eager"
              path=project.img
              avoid_scaling=true
              alt="project thumbnail"
              class="card-img"
            %}
          {% else %}
            <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}">
              {% include figure.liquid
                loading="eager"
                path=project.img
                avoid_scaling=true
                alt="project thumbnail"
                class="card-img"
              %}
            </a>
          {% endif %}
        </div>
      {% endif %}

      <div class="{% if project.img %}col-md-6{% else %}col-md-12{% endif %}">
        <div class="card-body">
          <h3 class="card-title">
            {% if project.disabled %}
              <span class="project-title-link disabled">{{ project.title }}</span>
            {% else %}
              <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}" class="project-title-link">
                {{ project.title }}
              </a>
            {% endif %}
          </h3>

          {% if project.keyword %}
            <p class="card-keyword">
              {{ project.keyword }}
            </p>
          {% endif %}

          <p class="card-text">{{ project.description }}</p>

          {% if project.buttons %}
            <div class="button-wrap" style="margin-top: {{ project.marginTop | default: '1.8rem' }};">
              {% for btn in project.buttons %}
                <a href="{{ btn.url }}" class="btn btn-sm btn-outline-primary mr-2" role="button" target="_blank">
                  {{ btn.name }}
                </a>
              {% endfor %}
            </div>
          {% endif %}

          <div class="row ml-1 mr-1 p-0">
            {% if project.github %}
              <div class="github-icon">
                <div class="icon" data-toggle="tooltip" title="Code Repository">
                  <a href="{{ project.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                </div>
                {% if project.github_stars %}
                  <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                    <i class="fa-solid fa-star"></i>
                    <span id="{{ project.github_stars }}-stars"></span>
                  </span>
                {% endif %}
              </div>
            {% endif %}
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
